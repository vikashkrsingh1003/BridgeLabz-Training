-- ============================================================
-- FINE CALCULATION (Late return > 7 days, Rs.10/day)
-- ============================================================

-- mysql>
UPDATE borrow_record
SET fine_amount = DATEDIFF(return_date, borrow_date) > 7
    * (DATEDIFF(return_date, borrow_date) - 7) * 10
WHERE borrow_id = 1;

/* o/p
Query OK, 1 row affected (0.01 sec)
*/

